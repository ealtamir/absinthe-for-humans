extends views/layout

block content
  section.img_container
    table
      tbody
        tr
          - var len = shots.length;
          each _, index in shots
            if (index % 4 === 0)
              td
                - for(var x = index, end = index + 4; x < end && x < len; x += 1)
                  - s = shots[x];
                  img(
                    src=(s.image_400_url)? s.image_400_url: s.image_teaser_url,
                    alt=s.title
                  )

